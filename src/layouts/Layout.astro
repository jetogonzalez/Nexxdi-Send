---
interface Props {
  title: string;
  description?: string;
}

const { title, description = "Aplicación móvil Nexxdi Cash" } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
        <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
        <meta name="screen-orientation" content="portrait" />
        <meta name="orientation" content="portrait" />
    <meta name="theme-color" content="#F0EFF8" />
    <meta name="mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="default" />
    <meta name="apple-mobile-web-app-title" content="Nexxdi Cash" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Manrope:wght@300;400;500;600;700;800&display=swap" rel="stylesheet" />
    <!-- Favicons para todas las plataformas -->
    <link rel="icon" type="image/x-icon" href="/favicon.png" />
    <link rel="shortcut icon" type="image/x-icon" href="/favicon.png" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <link rel="apple-touch-icon" href="/favicon.png" />
    <link rel="apple-touch-icon" sizes="180x180" href="/Favicon@2x.png" />
    <link rel="apple-touch-icon" sizes="270x270" href="/Favicon@3x.png" />
    <link rel="manifest" href="/manifest.json" />
    <title>{title}</title>
  </head>
  <body>
    <slot />
    
    <!-- Registro del Service Worker para PWA y notificaciones -->
    <script is:inline>
      if ('serviceWorker' in navigator) {
        window.addEventListener('load', function() {
          navigator.serviceWorker.register('/service-worker.js')
            .then(function(registration) {
              console.log('ServiceWorker registrado con éxito:', registration.scope);
            })
            .catch(function(error) {
              console.log('Error al registrar ServiceWorker:', error);
            });
        });
      }
    </script>
  </body>
</html>

<style is:global>
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  html {
    height: 100%;
    background-color: #F0EFF8 !important;
    /* Extender el fondo a las safe areas */
    padding-top: env(safe-area-inset-top);
    padding-bottom: env(safe-area-inset-bottom);
  }

  html, body {
    height: 100%;
    font-family: 'Manrope', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
    background-color: #F0EFF8 !important;
    /* Ocultar scrollbar pero mantener funcionalidad de scroll */
    scrollbar-width: none; /* Firefox */
    -ms-overflow-style: none; /* IE/Edge */
    opacity: 1 !important;
    visibility: visible !important;
  }

  /* Ocultar scrollbar en Chrome/Safari */
  html::-webkit-scrollbar,
  body::-webkit-scrollbar {
    display: none;
    width: 0;
    height: 0;
  }

  /* Prevent pull-to-refresh on mobile */
  body {
    background-color: #F0EFF8 !important;
    overscroll-behavior-y: contain;
    -webkit-overflow-scrolling: touch;
    /* Asegurar que el fondo se extienda a las safe areas */
    min-height: 100vh;
    min-height: 100dvh; /* Dynamic viewport height for mobile */
    opacity: 1 !important;
    visibility: visible !important;
  }


  /* Bloquear orientación horizontal en móviles */
  @media screen and (orientation: landscape) and (max-width: 768px) {
    html {
      transform: rotate(-90deg);
      transform-origin: left top;
      width: 100vh;
      height: 100vw;
      overflow-x: hidden;
      position: absolute;
      top: 100%;
      left: 0;
    }

    body::before {
      content: 'Por favor, rota tu dispositivo a modo vertical';
      position: fixed;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%) rotate(90deg);
      z-index: 99999;
      background: rgba(16, 24, 40, 0.95);
      color: white;
      padding: 2rem;
      border-radius: 1rem;
      font-size: 1.2rem;
      text-align: center;
      white-space: nowrap;
      font-family: 'Manrope', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.3);
    }
  }

  /* Ocultar scrollbar pero mantener funcionalidad de scroll */
  .hide-scrollbar {
    scrollbar-width: none; /* Firefox */
    -ms-overflow-style: none; /* IE/Edge */
  }

  .hide-scrollbar::-webkit-scrollbar {
    display: none; /* Chrome/Safari */
    width: 0;
    height: 0;
  }

  /* ========================================
     PRESS EFFECT - Escala al presionar
     ======================================== */
  
  /* Clase para elementos clickeables con efecto de presión (solo cuando se usa explícitamente) */
  .pressable {
    transition: transform 0.15s cubic-bezier(0.25, 0.46, 0.45, 0.94);
    -webkit-tap-highlight-color: transparent;
    user-select: none;
  }

  .pressable:active {
    transform: scale(0.97);
  }

  /* Botones e interactivos - solo transición, sin escala automática en :active */
  button:not([disabled]),
  [role="button"]:not([disabled]),
  a:not([disabled]) {
    -webkit-tap-highlight-color: transparent;
  }

  /* Evitar efecto en elementos que ya manejan su propia escala (como cards del slider) */
  .no-press-effect,
  .no-press-effect:active {
    transform: none !important;
  }

  /* ========================================
     PROTECCIÓN DE IMÁGENES
     ======================================== */
  
  /* Bloquear selección y arrastre de imágenes */
  img {
    -webkit-user-select: none;
    -khtml-user-select: none;
    -moz-user-select: none;
    -o-user-select: none;
    user-select: none;
    -webkit-user-drag: none;
    -khtml-user-drag: none;
    -moz-user-drag: none;
    -o-user-drag: none;
    user-drag: none;
    pointer-events: none;
    -webkit-touch-callout: none;
  }

  /* Permitir pointer-events en imágenes dentro de botones */
  button img,
  [role="button"] img,
  a img {
    pointer-events: none;
  }

</style>

<script>
  // Bloquear menú contextual en imágenes
  document.addEventListener('contextmenu', (e) => {
    if (e.target instanceof HTMLImageElement) {
      e.preventDefault();
      return false;
    }
  });

  // Bloquear arrastre de imágenes
  document.addEventListener('dragstart', (e) => {
    if (e.target instanceof HTMLImageElement) {
      e.preventDefault();
      return false;
    }
  });

  // Bloquear long-press en móviles
  let longPressTimer: ReturnType<typeof setTimeout> | null = null;
  
  document.addEventListener('touchstart', (e) => {
    if (e.target instanceof HTMLImageElement) {
      longPressTimer = setTimeout(() => {
        e.preventDefault();
      }, 500);
    }
  }, { passive: false });

  document.addEventListener('touchend', () => {
    if (longPressTimer) {
      clearTimeout(longPressTimer);
      longPressTimer = null;
    }
  });

  document.addEventListener('touchmove', () => {
    if (longPressTimer) {
      clearTimeout(longPressTimer);
      longPressTimer = null;
    }
  });
</script>
